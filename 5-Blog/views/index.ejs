<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
      <h2>All Blogs</h2>
      <!-- prettier-ignore -->
      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>

      <!-- prettier-ignore -->
      <h3 class="title"><%= blog.title %></h3>
      <p class="snippet"><%= blog.snippet %></p>

      <!-- prettier-ignore -->
      <% }) %>
      <% } else { %>
      <p>There are no blogs to display...</p>
      <% } %>

      <!-- prettier-ignore -->
      <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
